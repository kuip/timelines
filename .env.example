# Database Configuration
# Use DATABASE_URL for Supabase (recommended) or individual DB_* variables for local PostgreSQL

# Supabase Connection (primary - use the pooler URL for better performance)
DATABASE_URL=postgresql://postgres.<project-ref>:<password>@aws-1-us-west-1.pooler.supabase.com:5432/postgres

# Supabase Direct Connection (alternative - for migrations or admin tasks)
# DATABASE_URL=postgresql://postgres:<password>@db.<project-ref>.supabase.co:5432/postgres

# Supabase Additional Config (optional - for Supabase client libraries)
NEXT_PUBLIC_SUPABASE_URL=https://<project-ref>.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Local PostgreSQL (fallback - comment out when using Supabase)
# DATABASE_URL=postgresql://postgres@localhost:5432/timeline
# DB_NAME=timeline
# DB_USER=postgres
# DB_HOST=localhost
# DB_PORT=5432
# DB_PASSWORD=
# DB_SSLMODE=disable

# X.com Integration
X_API_KEY=your_x_api_key_here
X_API_SECRET=your_x_api_secret_here
X_BEARER_TOKEN=your_x_bearer_token_here
X_CALLBACK_URL=http://localhost:3000/auth/x/callback

# Server
GIN_MODE=debug
PORT=8080

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_X_CLIENT_ID=your_x_client_id_here

# Cache refresh
MESSAGE_REFRESH_INTERVAL=3600
